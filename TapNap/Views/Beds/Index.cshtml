        function editInformation() {
            swal({
                title: '<span class="sweet-font-form">Edit your listing!</span>',
                html:
                    '<input id="form-title" class="swal2-input" placeholder="Property Title">' +
                    '<input id="form-description" class="swal2-input" placeholder="Property Description">' +
                    '<input id="form-price" class="swal2-input" placeholder="Property Pricing">' +
                    '<input id="form-start" class="swal2-input"  type="datetime-local">' +
                    '<input id="form-end" class="swal2-input"  type="datetime-local">',
                confirmButtonText: "Edit these details!",
                focusConfirm: false,
                preConfirm: () => {
                    document.getElementById("title").value = document.getElementById("form-title").value;
                    document.getElementById("description").value = document.getElementById("form-description").value;
                    document.getElementById("price").value = document.getElementById("form-price").value;
                    document.getElementById("start").value = document.getElementById("form-start").value;
                    document.getElementById("end").value = document.getElementById("form-end").value;

                    // document.getElementById("edit-listing-form").submit();

